{
	"name": "css-ts",
	"version": "1.0.0",
	"description": "Creates *.ts files from *.css files",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"maintenance": "npm i --package-lock-only && npm audit fix && ./node_modules/.bin/npm-check-updates -u",
		"mostlyclean": "rimraf lib/ test/fixture/*.ts .coverage package-lock.json",
		"clean": "npm run mostlyclean; rimraf node_modules && package-lock.json yarn.lock",
		"build": "npm run mostlyclean && tsc && chmod +x lib/cli.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:ci": "jest --coverage",
		"lint": "./node_modules/.bin/eslint . --ext 'ts,tsx' --report-unused-disable-directives || true",
		"prepublish": "npm run build"
	},
	"bin": {
		"css-ts": "lib/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/elarivie/css-ts.git"
	},
	"keywords": [
		"css",
		"typescript",
		"ts",
		"typed"
	],
	"author": "Éric Larivière",
	"license": "MIT",
	"engines": {
		"node": ">=8.0.0"
	},
	"dependencies": {
		"camelcase": "^6.0.0",
		"chalk": "^4.1.0",
		"chokidar": "^3.4.0",
		"glob": "^7.1.6",
		"yargs": "^15.4.1"
	},
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"chai": "4.2.0",
		"@types/glob": "^7.1.3",
		"@types/jest": "^26.0.4",
		"@types/node": "^14.0.23",
		"@types/yargs": "^15.0.5",
		"jest": "^26.1.0",
		"ts-jest": "^26.1.2",
		"typescript": "^3.9.6",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"eslint": "^7.4.0",
		"npm-check-updates": "^7.0.1"
	},
	"jest": {
		"collectCoverage": true,
		"coverageReporters": [
			"json",
			"html"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "(test/.*.spec\\.ts)$",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"\\.d\\.ts$",
			"lib/",
			"example/",
			"coverage/"
		],
		"moduleFileExtensions": [
			"js",
			"ts",
			"json"
		]
	}
}
